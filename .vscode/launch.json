    "version": "0.2.0",
    "configurations": [
        {
            "name": "RUN",
            "type": "debugpy",
            "request": "launch",
            "module": "fastapi",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "python": "${workspaceRoot}/.venv/bin/python",
            "envFile": "${workspaceFolder}/.env",
            "env": {

            },
            "args": [
                "dev", "--port", "8080"
            ],
            "jinja": true,
            "justMyCode": false,
        },
        {
            "name": "RUN TESTS",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "python": "${workspaceRoot}/.venv/bin/python",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "args": [
                "tests", "-s"
            ],
            "jinja": true,
            "justMyCode": false,
        }
    ]
}
